@using Microsoft.AspNetCore.Identity
@using ZreperujTo.Web.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="LogOff" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="User" asp-action="Index" title="Manage"><i class="fa fa-user" aria-hidden="true"></i> Profil</a>
            </li>
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage"><i class="fa fa-cog fa-fw" aria-hidden="true"></i> Ustawienia</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Wyloguj</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Rejestracja</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Logowanie</a></li>
    </ul>
}
